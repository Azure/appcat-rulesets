<?xml version="1.0"?>
<ruletest xmlns="http://windup.jboss.org/schema/jboss-ruleset">
    <testDataPath>data</testDataPath>
    <ruleset>
        <rules>
            <rule>
                <when>
                    <not>
                        <classification-exists classification="EJB XML" />
                    </not>
                </when>
                <perform>
                    <fail message="EJB JAR XML descriptor not found!"/>
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>
