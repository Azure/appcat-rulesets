<?xml version="1.0" encoding="UTF-8"?>
<ruleset id="configuration-management-technology-usage"
         xmlns="http://windup.jboss.org/schema/jboss-ruleset"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This ruleset adds tags the configuration management technologies so are appropriately categorized on the technology reports.
            This ruleset overrides the rules/rules-reviewed/technology-usage/configuration-managemen-technology-usage.windup.xml ruleset.
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules,windup-rules-javaee,3.0.0.Final"/>
            <addon id="org.jboss.windup.rules,windup-rules-java,3.0.0.Final"/>
            <addon id="org.jboss.windup.rules,windup-rules-xml,3.0.0.Final"/>
        </dependencies>
        <targetTechnology id="azure-spring-apps"/>
        <targetTechnology id="azure-appservice"/>
        <targetTechnology id="azure-aks"/>
        <targetTechnology id="azure-container-apps"/>
        <overrideRules>true</overrideRules>
    </metadata>
    <rules>
        <rule id="configuration-management-technology-usage-0600">
            <when>
                <graph-query discriminator="TechnologyTagModel">
                    <property name="name">Spring Cloud Vault</property>
                </graph-query>
            </when>
            <perform>
                <technology-identified name="Spring Cloud Vault">
                    <tag name="Sustain"/>
                    <tag name="Configuration Management"/>
                    <tag name="Embedded"/>
                </technology-identified>
            </perform>
        </rule>
    </rules>
</ruleset>
