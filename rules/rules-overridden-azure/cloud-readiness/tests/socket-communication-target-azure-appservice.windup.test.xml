<?xml version="1.0"?>
<ruletest id="socket-communication-test" xmlns="http://windup.jboss.org/schema/jboss-ruleset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <testDataPath>../../../rules-reviewed/cloud-readiness/tests/data</testDataPath>
    <rulePath>../../../rules-reviewed/cloud-readiness/socket-communication.windup.xml</rulePath>
    <rulePath>../socket-communication.windup.xml</rulePath>
    <target>azure-appservice</target>
    <ruleset>
        <rules>
            <rule id="socket-communication-azure-appservice-test-00000">
                <when>
                    <not>
                        <iterable-filter size="63">
  	                      <hint-exists message="For real-time, bidirectional communication between components that require low-latency, consider integrating Azure SignalR Service"/>
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="Direct communication hint was not found" />
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>
