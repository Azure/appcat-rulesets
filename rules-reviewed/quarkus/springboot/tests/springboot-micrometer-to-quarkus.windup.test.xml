<?xml version="1.0"?>
<ruletest id="springboot-micrometer-to-quarkus-tests"
          xmlns="http://windup.jboss.org/schema/jboss-ruleset"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <testDataPath>data/springboot-micrometer</testDataPath>
    <rulePath>../springboot-micrometer-to-quarkus.windup.xml</rulePath>
    <ruleset>
        <rules>
            <rule id="springboot-quarkus-micrometer-registry-prometheus-00000-test">
                <when>
                    <not>
                        <iterable-filter size="2">
                            <hint-exists message="Replace the `io.micrometer:micrometer-registry-prometheus` dependency with the Quarkus dependency.*"/>
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="[springboot-quarkus-micrometer-registry-prometheus-00000-test] quarkus-micrometer-registry-prometheus Quarkus extension hint was not found!" />
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>
