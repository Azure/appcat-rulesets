                    <not>
                        <iterable-filter size="1">
                            <hint-exists message="To migrate a Java application that uses Apache Axis to Azure"/>
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="Apache Axis embedded-framework found hint was not found!"/>
                </perform>
