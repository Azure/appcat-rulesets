<?xml version="1.0" encoding="UTF-8"?>
<ruletest id="3rd-party-technology-usage-azure-appservice-test"
          xmlns="http://windup.jboss.org/schema/jboss-ruleset"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <testDataPath>data/3rd-party</testDataPath>
    <rulePath>../../../rules-reviewed/technology-usage/3rd-party.windup.xml</rulePath>
    <rulePath>../3rd-party.windup.xml</rulePath>
    <rulePath>../../../rules-reviewed/technology-usage/3rd-party-technology-usage.windup.xml</rulePath>
    <rulePath>../3rd-party-technology-usage.windup.xml</rulePath>
    <target>azure-appservice</target>
    <ruleset>
        <rules>
           <rule id="technology-usage-3rd-party-21000-test">
                <when>
                    <not>
                        <technology-statistics-exists name="Splunk" number-found="1">
                            <tag name="Execute"/>
                            <tag name="Embedded"/>
                            <tag name="3rd party"/>
                        </technology-statistics-exists>
                    </not>
                </when>
                <perform>
                    <fail message="Expected data not found for Splunk, rule technology-usage-3rd-party-21000"/>
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>
