<?xml version="1.0"?>
<ruleset id="technology-usage-integration"
    xmlns="http://windup.jboss.org/schema/jboss-ruleset"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This ruleset provides statistical summaries of embedded 3rd party frameworks.
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules,windup-rules-javaee,3.0.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-java,3.0.0.Final" />
        </dependencies>
        <phase>PostMigrationRulesPhase</phase>
    </metadata>
    <rules>
      <rule id="technology-usage-integration-00001">
          <when>
              <graph-query discriminator="TechnologyTagModel">
                  <property name="name">Apache Camel (embedded)</property>
              </graph-query>
          </when>
          <perform>
              <technology-identified name="Camel">
                  <tag name="Execute"/>
                  <tag name="Embedded"/>
                  <tag name="Integration"/>
              </technology-identified>
          </perform>
      </rule>
      <rule id="technology-usage-integration-00002">
          <when>
              <graph-query discriminator="TechnologyTagModel">
                  <property name="name">Teiid (embedded)</property>
              </graph-query>
          </when>
          <perform>
              <technology-identified name="Teiid">
                  <tag name="Execute"/>
                  <tag name="Embedded"/>
                  <tag name="Integration"/>
              </technology-identified>
          </perform>
      </rule>
      <rule id="technology-usage-integration-00003">
          <when>
              <graph-query discriminator="TechnologyTagModel">
                  <property name="name">Spring Integration (embedded)</property>
              </graph-query>
          </when>
          <perform>
              <technology-identified name="Spring Integration">
                  <tag name="Execute"/>
                  <tag name="Embedded"/>
                  <tag name="Integration"/>
              </technology-identified>
          </perform>
      </rule>
      <rule id="technology-usage-integration-00004">
          <when>
              <graph-query discriminator="TechnologyTagModel">
                  <property name="name">Ikasan (embedded)</property>
              </graph-query>
          </when>
          <perform>
              <technology-identified name="Ikasan">
                  <tag name="Execute"/>
                  <tag name="Embedded"/>
                  <tag name="Integration"/>
              </technology-identified>
          </perform>
      </rule>
    </rules>
</ruleset>
