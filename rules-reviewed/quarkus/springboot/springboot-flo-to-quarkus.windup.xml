<?xml version="1.0"?>
<ruleset xmlns="http://windup.jboss.org/schema/jboss-ruleset" id="springboot-flo-to-quarkus"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This ruleset gives hints to migrate from SpringBoot Flo to Quarkus
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules,windup-rules-javaee,3.0.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-java,3.0.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-xml,3.0.0.Final" />
        </dependencies>
        <sourceTechnology id="springboot" />
        <targetTechnology id="quarkus" />
    </metadata>
    <rules>
        <rule id="springboot-flo-to-quarkus-00000">
            <when>
                <filecontent pattern="flo-editor"></filecontent>
            </when>
            <perform>
                <hint title="Spring Flo is not supported by Quarkus" effort="13" category-id="mandatory">
                    <message>
                        Spring Flo Javascript library has been detected.

                        This is used in conjunction with Spring Cloud Data Flow which is not supported in Quarkus
                    </message>
                </hint>
            </perform>
        </rule>
    </rules>
</ruleset>