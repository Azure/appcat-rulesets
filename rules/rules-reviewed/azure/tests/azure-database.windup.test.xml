<?xml version="1.0"?>
<ruletest id="azure-database-test" xmlns="http://windup.jboss.org/schema/jboss-ruleset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <testDataPath>data/azure-database</testDataPath>
    <rulePath>../../technology-usage/database.windup.groovy</rulePath>
    <rulePath>../azure-database.windup.xml</rulePath>
    <ruleset>
        <rules>
            <rule id="azure-database-test-01000">
                <when>
                    <not>
                        <iterable-filter size="1">
                            <hint-exists message="PostgreSQL database found" />
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="PostgreSQL database hint was not found!" />
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>